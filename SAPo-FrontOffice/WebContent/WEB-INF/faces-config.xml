<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 <converter>
  <display-name>DateConverter</display-name>
  <converter-id>DateConverter</converter-id>
  <converter-class>utils.DateConverter</converter-class>
 </converter>
 <managed-bean>
  <managed-bean-name>sessionBB</managed-bean-name>
  <managed-bean-class>managedBeans.SessionBB</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>homeBB</managed-bean-name>
  <managed-bean-class>managedBeans.HomeBB</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>newStoreBB</managed-bean-name>
  <managed-bean-class>managedBeans.NewStoreBB</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>mongoBB</managed-bean-name>
  <managed-bean-class>managedBeans.MongoBB</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>customizeBB</managed-bean-name>
  <managed-bean-class>managedBeans.CustomizeBB</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <display-name>/login</display-name>
  <from-view-id>/pages/Login.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{sessionBB.loginWithEmail}</from-action>
   <from-outcome>loginOk</from-outcome>
   <to-view-id>/pages/Home.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{sessionBB.loginWithEmail}</from-action>
   <from-outcome>loginError</from-outcome>
   <to-view-id>/pages/Login.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{sessionBB.loginWithFacebook}</from-action>
   <from-outcome>loginOk</from-outcome>
   <to-view-id>/pages/Home.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{sessionBB.goToRegister}</from-action>
   <from-outcome>goToRegister</from-outcome>
   <to-view-id>/pages/Register.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/registro</display-name>
  <from-view-id>/pages/Register.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{sessionBB.register}</from-action>
   <from-outcome>registerOk</from-outcome>
   <to-view-id>/pages/Home.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/home</display-name>
  <from-view-id>/pages/Home.xhtml</from-view-id>
 </navigation-rule>
 <navigation-rule>
  <display-name>/crearAlmacen</display-name>
  <from-view-id>/pages/NewStore.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{newStoreBB.create}</from-action>
   <from-outcome>OkNewStore</from-outcome>
   <to-view-id>/pages/Home.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/crearProducto</display-name>
  <from-view-id>/pages/NewProduct.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{newProductBB.create}</from-action>
   <from-outcome>OkNewProduct</from-outcome>
   <to-view-id>/pages/StoreDetail.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/almacen</display-name>
  <from-view-id>/pages/StoreDetail.xhtml</from-view-id>
 </navigation-rule>
 <navigation-rule>
  <display-name>/crearCategoria</display-name>
  <from-view-id>/pages/NewCategory.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{newCategoryBB.create}</from-action>
   <from-outcome>OkNewCategory</from-outcome>
   <to-view-id>/pages/StoreDetail.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{newCategoryBB.create}</from-action>
   <from-outcome>FailNewCategory</from-outcome>
   <to-view-id>/pages/NewCategory.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/crearListaDeCompras</display-name>
  <from-view-id>/pages/NewBuyList.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{newBuyListBB.createBuyList}</from-action>
   <from-outcome>okNewBuyList</from-outcome>
   <to-view-id>/pages/StoreBuyLists.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{newBuyListBB.createBuyList}</from-action>
   <from-outcome>failNewBuyList</from-outcome>
   <to-view-id>/pages/NewBuyList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>/editarListaDeCompras</display-name>
  <from-view-id>/pages/EditBuyList.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{editBuyListBB.saveBuyList}</from-action>
   <from-outcome>okEditBuyList</from-outcome>
   <to-view-id>/pages/StoreBuyLists.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{editBuyListBB.saveBuyList}</from-action>
   <from-outcome>failEditBuyList</from-outcome>
   <to-view-id>/pages/EditBuyList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application/>
</faces-config>
