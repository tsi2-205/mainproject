<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<navigation-rule>
		<display-name>/login</display-name>
		<from-view-id>/pages/Login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{sessionBB.loginWithEmail}</from-action>
			<from-outcome>loginOkRegistered</from-outcome>
			<to-view-id>/pages/Home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{sessionBB.loginWithEmail}</from-action>
			<from-outcome>loginError</from-outcome>
			<to-view-id>/pages/Login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{sessionBB.loginWithFacebook}</from-action>
			<from-outcome>loginOkRegistered</from-outcome>
			<to-view-id>/pages/Home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{sessionBB.goToRegister}</from-action>
			<from-outcome>goToRegister</from-outcome>
			<to-view-id>/pages/Register.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{sessionBB.loginWithEmail}</from-action>
			<from-outcome>loginOkAdmin</from-outcome>
			<to-view-id>/pages/AdminProducts.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>/home</display-name>
		<from-view-id>/pages/AdminHome.xhtml</from-view-id>
	</navigation-rule>

	<navigation-rule>
		<display-name>/registro</display-name>
		<from-view-id>/pages/Register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{sessionBB.register}</from-action>
			<from-outcome>registerOk</from-outcome>
			<to-view-id>/pages/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>/home</display-name>
		<from-view-id>/pages/Home.xhtml</from-view-id>
	</navigation-rule>

	<navigation-rule>
		<display-name>/crearAlmacen</display-name>
		<from-view-id>/pages/NewStore.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{newStoreBB.create}</from-action>
			<from-outcome>OkNewStore</from-outcome>
			<to-view-id>/pages/Home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>/crearProducto</display-name>
		<from-view-id>/pages/NewProduct.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{newProductBB.create}</from-action>
			<from-outcome>OkNewProduct</from-outcome>
			<to-view-id>/pages/StoreProducts.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>/almacen</display-name>
		<from-view-id>/pages/StoreProducts.xhtml</from-view-id>

	</navigation-rule>
	
	<navigation-rule>
		<display-name>/crearListaDeCompras</display-name>
		<from-view-id>/pages/NewBuyList.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{newBuyListBB.createBuyList}</from-action>
			<from-outcome>okNewBuyList</from-outcome>
			<to-view-id>/pages/StoreBuyLists.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{newBuyListBB.createBuyList}</from-action>
			<from-outcome>failNewBuyList</from-outcome>
			<to-view-id>/pages/NewBuyList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>/editarListaDeCompras</display-name>
		<from-view-id>/pages/EditBuyList.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{editBuyListBB.saveBuyList}</from-action>
			<from-outcome>okEditBuyList</from-outcome>
			<to-view-id>/pages/StoreBuyLists.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{editBuyListBB.saveBuyList}</from-action>
			<from-outcome>failEditBuyList</from-outcome>
			<to-view-id>/pages/EditBuyList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>/NuevoProducto</display-name>
		<from-view-id>/pages/NewGenericProduct.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{newGenericProductBB.create}</from-action>
			<from-outcome>OkNewProduct</from-outcome>
			<to-view-id>/pages/AdminProducts.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{newGenericProductBB.create}</from-action>
			<from-outcome>FailNewProduct</from-outcome>
			<to-view-id>/pages/NewGenericProduct.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>/EditarProducto</display-name>
		<from-view-id>/pages/EditGenericProduct.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{genericProductBB.saveChanges}</from-action>
			<from-outcome>OkEditProduct</from-outcome>
			<to-view-id>/pages/GenericProduct.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{genericProductBB.saveChanges}</from-action>
			<from-outcome>FailEditProduct</from-outcome>
			<to-view-id>/pages/EditGenericProduct.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<converter>
		<display-name>DateConverter</display-name>
		<converter-id>DateConverter</converter-id>
		<converter-class>utils.DateConverter</converter-class>
	</converter>
</faces-config>
